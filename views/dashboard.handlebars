<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>


    <link rel="stylesheet" type="text/css" media="screen" href="./assets/css/grid-dashboard.css" />
</head>

<body>

    {{> nav}}

    <div id="dash-grid">

        <div id="dash-main-section">
            <div class="col s12">
                <ul class="tabs">
                    <li class="tab col s6"><a class="active" href="#dash-tab-1">Tab 1</a></li>
                    <li class="tab col s6"><a href="#dash-tab-2">Tab 2</a></li>
                </ul>
            </div>

            <div id="dash-tab-1" class="col s12">Test 1
                {{#each blogs}}
                <h2>{{this.title}}</h2>
                <h6>{{this.subTitle}}</h6>
                <p>{{this.body}}</p>

                {{/each}}
            </div>

            <div id="dash-tab-2" class="col s12">New Entry
                {{> blogEntry }}
            </div>

        </div>


        <div id="profile-card">
            <div class="card">
                <div class="card-image">
                    <img src={{profile.profilePic}}>
                    <span class="card-title">{{profile.firstName}}</span>
                    <a class="btn-floating halfway-fab waves-effect waves-light red modal-trigger" href="#new-pic-modal"><i
                            class="material-icons">add</i></a>
                </div>
                <div class="card-content">
                    <p>Member Since: {{profile.userCreated}}</p>
                </div>
            </div>
        </div>



