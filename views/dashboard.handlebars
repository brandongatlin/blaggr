<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>

    <link rel="stylesheet" type="text/css" media="screen" href="./assets/css/grid-dashboard.css" />
</head>

<body>

    {{> nav}}

    <div id="dash-grid">

        <div id="dash-main-section">
            <div class="col s12">
                <ul class="tabs">
                    <li class="tab col s6"><a class="active" href="#dash-tab-1">Reader</a></li>
                    <li class="tab col s6"><a href="#dash-tab-2">New Entry</a></li>
                </ul>
            </div>

            <div id="dash-tab-1" class="col s12">
                {{#each blogs}}
                <h2>{{this.title}}</h2>
                <h6>{{this.subTitle}}</h6>
                <p>{{this.body}}</p>
                {{#if tags}}
                {{#each tags}}
                <div class="chip">
                    {{this}}
                </div>
                {{/each}}
                {{/if}}
                {{/each}}



            </div>

            <div id="dash-tab-2" class="col s12">
                {{> blogEntry }}
            </div>

        </div>


        <div id="profile-card">
            <div class="card">
                <div class="card-image">
                    <img src={{profile.profilePic}}>
                    <span class="card-title">{{profile.firstName}}</span>
                    <a class="btn-floating halfway-fab waves-effect waves-light red modal-trigger" href="#new-pic-modal"><i
                            class="material-icons">add</i></a>
                </div>
                <div class="card-content">
                    <p>Member Since: {{profile.userCreated}}</p>
                </div>
            </div>
        </div>


    </div>
    <!--End Grid -->



    <!-- Modal Structure -->
    <div id="new-pic-modal" class="modal">
        <div class="modal-content">
            <h4>Modal Header</h4>
            <form action='/api/profilePic' method="post" enctype="multipart/form-data">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>File</span>
                        <input type='file' name='image' />
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>

                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right"></i>
                </button>
            </form>
        </div>

    </div>

    <script src="./assets/js/dashboard.js"></script>
</body>

</html>